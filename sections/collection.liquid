{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<h1>{{ collection.title }}</h1>
<form id="range-filter-form" method="get">
  <label for="price_min">Price Min:</label>
  <input type="number" id="price_min" name="price_min" min="1" max="20" value="{{ request.params.price_min | default: 1 }}">
  <label for="price_max">Price Max:</label>
  <input type="number" id="price_max" name="price_max" min="1" max="20" value="{{ request.params.price_max | default: 20 }}">
  <button type="submit">Filter</button>
</form>
{% assign price_min = request.params.price_min | default: 1 | times: 100 %}
{% assign price_max = request.params.price_max | default: 20 | times: 100 %}
{% assign filtered_products = collection.products | where: "price", "gte", price_min | where: "price", "lte", price_max %}
{% assign collection_products = filtered_products %}

<div class="range-bar-filter">
  <label for="range-bar">Price Range: <span id="range-bar-value">{{ request.params.price_min | default: 1 }} - {{ request.params.price_max | default: 20 }}</span></label>
  <input type="range" id="range-bar-min" name="price_min" min="1" max="20" value="{{ request.params.price_min | default: 1 }}" oninput="document.getElementById('range-bar-value').innerText = this.value + ' - ' + document.getElementById('range-bar-max').value;">
  <input type="range" id="range-bar-max" name="price_max" min="1" max="20" value="{{ request.params.price_max | default: 20 }}" oninput="document.getElementById('range-bar-value').innerText = document.getElementById('range-bar-min').value + ' - ' + this.value;">
</div>
<script>
  // Sync range bar values with form inputs on submit
  document.getElementById('range-filter-form').addEventListener('submit', function(e) {
    document.getElementById('price_min').value = document.getElementById('range-bar-min').value;
    document.getElementById('price_max').value = document.getElementById('range-bar-max').value;
  });
</script>
<script>
  // Set min/max for range bars and inputs
  document.getElementById('price_min').min = 0.1;
  document.getElementById('price_min').max = 20;
  document.getElementById('price_max').min = 0.1;
  document.getElementById('price_max').max = 20;
  document.getElementById('range-bar-min').min = 0.1;
  document.getElementById('range-bar-min').max = 20;
  document.getElementById('range-bar-max').min = 0.1;
  document.getElementById('range-bar-max').max = 20;

  // Ensure range bars step by 0.1
  document.getElementById('range-bar-min').step = 0.1;
  document.getElementById('range-bar-max').step = 0.1;

  // Sync input fields with range bars on change
  document.getElementById('range-bar-min').addEventListener('input', function() {
    document.getElementById('price_min').value = this.value;
    document.getElementById('range-bar-value').innerText = this.value + ' - ' + document.getElementById('range-bar-max').value;
  });
  document.getElementById('range-bar-max').addEventListener('input', function() {
    document.getElementById('price_max').value = this.value;
    document.getElementById('range-bar-value').innerText = document.getElementById('range-bar-min').value + ' - ' + this.value;
  });
</script>

<style>
  .range-bar-filter label {
    font-weight: bold;
    margin-bottom: 0.2em;
  }
  .range-bar-filter input[type="range"] {
    accent-color: #0070f3;
    height: 2.5em;
    background: #f0f0f0;
    border-radius: 8px;
  }
  #range-bar-value {
    font-size: 1.1em;
    color: #0070f3;
    margin-left: 0.5em;
  }
  #range-filter-form {
    display: flex;
    gap: 1em;
    align-items: center;
    margin-bottom: 1em;
  }
  #range-filter-form label {
    font-size: 1em;
    margin-right: 0.2em;
  }
  #range-filter-form input[type="number"] {
    width: 4em;
    padding: 0.2em;
    border-radius: 4px;
    border: 1px solid #ccc;
  }
  #range-filter-form button {
    background: #0070f3;
    color: #fff;
    border: none;
    padding: 0.5em 1em;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }
  #range-filter-form button:hover {
    background: #005bb5;
  }
</style>
<style>
  .range-bar-filter {
    margin-bottom: 1em;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }
  .range-bar-filter input[type="range"] {
    width: 100%;
  }
</style>
<div class="collection-products">
  {% paginate collection.products by 20 %}
    {% for product in collection.products %}
      <div class="collection-product">
        {% if product.featured_image %}
          {% render 'image',
            class: 'collection-product__image',
            image: product.featured_image,
            url: product.url,
            width: 400,
            height: 400,
            crop: 'center'
          %}
        {% endif %}
        <div class="collection-product__content">
          <p>{{ product.title | escape | link_to: product.url }}</p>
          <p>{{ product.price | money }}</p>
        </div>
      </div>
    {% endfor %}

    {{ paginate | default_pagination }}
  {% endpaginate %}
</div>

{% stylesheet %}
  .collection-products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collection",
  "settings": []
}
{% endschema %}
