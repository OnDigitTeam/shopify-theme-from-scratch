{% style %}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --background-color: {{ section.settings.colors_background }};
    --circle-bg: {{ section.settings.colors_circle_bg }};
    --title-color: {{ section.settings.colors_title }};
  }

   .collection-circle-section {
    width:100%;
    {% if section.settings.use_custom_colors %}
      background-color: var(--background-color);
    {% endif %}
  }

  .collection-circle {
    text-align: center;
    flex: 0 0 auto;
    width: 130px;
  }

  .collection-circle__img {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 10px;
    background: var(--circle-bg, #f5f5f5);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-circle__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-circle__title {
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--title-color, #000);
  }

  .collection-circle-row {
    display: flex;
    flex-wrap: nowrap;
    gap: 100px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 10px 0;
  }

  .collection-circle-row::-webkit-scrollbar {
    display: none;
  }
{% endstyle %}

<section class="section--padding collection-circle-section">
  <div class="collection-circle-row">
    {% for block in section.blocks %}
      {% assign coll = block.settings.collection %}
      <div class="collection-circle" style="scroll-snap-align: start;">
        <a href="{% if coll %}{{ coll.url }}{% else %}#{% endif %}">
          <div class="collection-circle__img">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | img_url: '300x300' }}"
                alt="{{ coll.title | default: block.settings.custom_title }}"
              >
            {% elsif coll and coll.image %}
              <img src="{{ coll.image | img_url: '300x300' }}" alt="{{ coll.title }}">
            {% elsif coll and coll.products.first %}
              <img src="{{ coll.products.first.featured_image | img_url: '300x300' }}" alt="{{ coll.title }}">
            {% endif %}
          </div>
          <div class="collection-circle__title">
            {% if block.settings.custom_title != blank %}
              {{ block.settings.custom_title }}
            {% elsif coll %}
              {{ coll.title }}
            {% endif %}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection circle",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "checkbox",
      "id": "use_custom_colors",
      "default": false,
      "label": "Enable custom colors"
    },
    {
      "type": "color",
      "id": "colors_background",
      "label": "Background color",
      "default": "#EEEAE9"
    },
    {
      "type": "color",
      "id": "colors_circle_bg",
      "label": "Circle background color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "colors_title",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection item",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Choose collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image (optional)"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom title (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection circle",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  }
}
{% endschema %}
