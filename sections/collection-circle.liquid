{% style %}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .section--padding {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
  }

  .collection-circle {
    text-align: center;
    flex: 0 0 auto; 
    width: 130px;
  }

  .collection-circle__img {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 10px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-circle__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-circle__title {
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .collection-circle-row {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 10px 0;
  }

  .collection-circle-row::-webkit-scrollbar {
    display: none; /* hide scrollbar for clean look */
  }
{% endstyle %}

<section class="section--padding">
  <div class="collection-circle-row">
    {% for collection in collections %}
      <div class="collection-circle" style="scroll-snap-align: start;">
        <a href="{{ collection.url }}">
          <div class="collection-circle__img">
            {% if collection.image %}
              <img src="{{ collection.image | img_url: '300x300' }}" alt="{{ collection.title }}">
            {% else %}
              {% if collection.products.first %}
                <img
                  src="{{ collection.products.first.featured_image | img_url: '300x300' }}"
                  alt="{{ collection.title }}"
                >
              {% endif %}
            {% endif %}
          </div>
          <div class="collection-circle__title">
            {{ collection.title }}
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection circle",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.header.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_top.unit",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_bottom.unit",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection circle"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  }
}
{% endschema %}
