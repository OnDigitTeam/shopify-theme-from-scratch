{%- comment -%}
  Slideshow Section

  theme-check-disable SchemaInNonJSON
{%- endcomment -%}
{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

<section class="slideshow-section">
  <div class="slideshow js-slideshow {% if section.settings.layout == 'right' %}slideshow--right{% else %}slideshow--left{% endif %}" data-autoplay="true" data-delay="5000">
   
    
    {% for block in section.blocks %}
      <div class="slideshow__slide" {{ block.shopify_attributes }}>
        {% if block.settings.video_url != blank %}
          <div class="slideshow__media">
            <video autoplay muted loop playsinline class="slideshow__video">
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
          </div>
        {% elsif block.settings.image != blank %}
          <div class="slideshow__media">
            <img
              src="{{ block.settings.image | image_url: width: 1600 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="slideshow__image"
              loading="lazy"
              width="auto"
              height="auto"
            >
          </div>
        {% endif %}
         

        <div class="slideshow__text-content">
          <h2>{{ block.settings.heading }}</h2>
          <p>{{ block.settings.text }}</p>
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="slideshow__button btn">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    <button class="slideshow__arrow slideshow__arrow--prev" aria-label="Previous slide">‹</button>
<button class="slideshow__arrow slideshow__arrow--next" aria-label="Next slide">›</button>


  </div>
</section>

{% schema %}
{
  "name": "Slideshow",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Content Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
  "type": "checkbox",
  "id": "autoplay",
  "label": "Enable autoplay",
  "default": true
},
{
  "type": "range",
  "id": "autoplay_speed",
  "label": "Autoplay delay (ms)",
  "min": 2000,
  "max": 5000,
  "step": 500,
  "default": 2000
}
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL (MP4)",
          "info": "Leave image blank if using video"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "category": "Image"
    }
  ]
}
{% endschema %}
