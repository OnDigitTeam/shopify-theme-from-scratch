{% comment %}
  Header section for eCommerce site using brand.logo
{% endcomment %}
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
<style>
.site-header {
  padding: 20px 0;
  font-family: 'Inter', 'Helvetica Neue', Arial, sans-serif;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
}

.logo-link {
  display: flex;
  align-items: center;
  text-decoration: none;
}
.site-logo {
  height: 56px;
  width: auto;
  display: block;
  border-radius: 8px;
  
}
.site-name {
  font-size: 2.2rem;
  font-weight: 700;
  color: #3730a3;
  letter-spacing: 1px;
  margin-left: 8px;
}
.main-nav .nav-list {
  list-style: none;
  display: flex;
  gap: 36px;
  margin: 0;
  padding: 0;
}
.nav-link {
  text-decoration: none;
  color: #3730a3;
  font-size: 1.08rem;
  font-weight: 600;
  padding: 8px 16px;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
}
.nav-link:hover {
  background: #eef2ff;
  color: #2563eb;
}
.header-actions {
  display: flex;
  justify-content: flex-end;
  gap: 18px;
  padding: 0 32px;
  margin-top: 12px;
}
.header-actions .action-link {
  font-size: 1rem;
  text-decoration: none;
  color: #3730a3;
  font-weight: 600;
  padding: 8px 16px;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
}
.header-actions .action-link:hover {
  background: #eef2ff;
  color: #2563eb;
}
@media (max-width: 800px) {
  .header-container {
    flex-direction: column;
    gap: 16px;
    padding: 0 16px;
  }
  .main-nav .nav-list {
    gap: 18px;
  }
  .site-logo {
    height: 40px;
  }
  .site-name {
    font-size: 1.5rem;
  }
  .header-actions {
    padding: 0 16px;
    margin-top: 8px;
    gap: 10px;
  }
  .header-actions .action-link {
    font-size: 0.95rem;
    padding: 6px 12px;
  }
}
</style>
<header class="site-header">
  <div class="container header-container">
    <a href="/" class="logo-link">
      {% if shop.brand.logo %}
        <img src="{{ shop.brand.logo | img_url: '200x' }}" alt="{{ shop.brand.name }}" class="site-logo" />
      {% else %}
        <span class="site-name">{{ brand.name }}</span>
      {% endif %}
    </a>
    <nav class="main-nav">
      <ul class="nav-list">
        <li><a href="/collections/all" class="nav-link">Shop</a></li>
        <li><a href="/pages/about-us" class="nav-link">About</a></li>
        <li><a href="/pages/contact" class="nav-link">Contact</a></li>
        <li><a href="/cart" class="nav-link">Cart</a></li>
      </ul>
    </nav>
    <div class="header-actions">
      <a href="/account" class="action-link">Account</a>
      <a href="/cart" class="action-link">Cart</a>
    </div>
  </div>
</header>
