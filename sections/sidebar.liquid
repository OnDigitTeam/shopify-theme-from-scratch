
<button id="openSidebarBtn">Open Sidebar</button>
<sidebar-drawer id="mySidebar">
    <div style="padding:2rem;">
        <h2>Sidebar Drawer</h2>
        <p>This is your custom sidebar content.</p>
        <button id="closeSidebarBtn">Close</button>
    </div>
</sidebar-drawer>
<script>
    document.getElementById('openSidebarBtn').addEventListener('click', function() {
        document.getElementById('mySidebar').open();
    });
    document.getElementById('closeSidebarBtn').addEventListener('click', function() {
        document.getElementById('mySidebar').close();
    });
</script>



{% schema %}
{
    "name": "Sidebar"
}
{% endschema %}