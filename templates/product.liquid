<!-- Product Page Template -->

<div class="product-page">
    <div class="product-image">
        <img src="{{ product.featured_image | image_url: width: 800, height:  }}" alt="Product Image">
    </div>
    <div class="product-details">
        <h1 class="product-title">{{  product.title }}</h1>
        <p class="product-price">{{ product.price |  }}</p>
        <p class="product-vendor">{{ product.vendor }}</p>
       {% form 'product', product %}
         
     
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <button type="submit" class="add-to-cart-btn">{{  }}</button>
       {% endform %}
        <p class="product-description">
            {{ product.description | strip_html | truncate: 150 }}
        </p>
    </div>
</div>

<style>
.product-page {
    display: flex;
    gap: 40px;
    max-width: 900px;
    margin: 40px auto;
    align-items: flex-start;
}
.product-image img {
    width: 400px;
    height: 400px;
    object-fit: cover;
    border-radius: 8px;
    background: #f5f5f5;
}
.product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
}
.product-title {
    font-size: 2rem;
    margin: 0;
}
.product-price {
    font-size: 1.5rem;
    color: #2d2d2d;
    margin: 0;
}
.add-to-cart-btn {
    background: #1a73e8;
    color: #fff;
    border: none;
    padding: 14px 32px;
    font-size: 1rem;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s;
}
.add-to-cart-btn:hover {
    background: #155ab6;
}
.product-description {
    color: #555;
    font-size: 1rem;
}
@media (max-width: 700px) {
    .product-page {
        flex-direction: column;
        gap: 24px;
        align-items: stretch;
    }
    .product-image img {
        width: 100%;
        height: auto;
    }
}
</style>