<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <title>{{ page_title }}</title> 

    
    
    <script src="{{ 'vendor-v4.js' | asset_url }}" defer="defer"></script>

    <script src="{{ 'splide.min.js' | asset_url }}"></script>
    
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'search-form.js' | asset_url }}" defer="defer"></script>

    

    {% # Load and preload the critical CSS %}
    {% render 'css-variables' %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
    {% # Inlined CSS Variables %}
    
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}" type="text/css" media="all">
    {%- if settings.predictive_search_enabled -%}
      <link
        rel="stylesheet"
        href="{{ 'component-predictive-search.css' | asset_url }}"
        media="print"
        onload="this.media='all'"
      >
    {%- endif -%}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        predictive_search_url: '{{ routes.predictive_search_url }}',
      };

      
     
    </script>
    <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
